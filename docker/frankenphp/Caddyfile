{
    # Global options
    auto_https off
    order php_server before file_server
}

:80 {
    # Set the root directory
    root * /app/public
    
    # Enable compression
    encode gzip zstd
    
    # Log to stdout
    log {
        output stdout
        format json
        level INFO
    }
    
    # Handle PHP files with worker mode (4 workers for production)
    php_server {
        worker index.php 4
    }
}
