{
    # Global options
    auto_https off
    order php_server before file_server
}

:80 {
    # Set the root directory
    root * /app/public
    
    # Enable compression
    encode gzip zstd
    
    # Log to stdout with DEBUG level for development
    log {
        output stdout
        format console
        level DEBUG
    }
    
    # Handle PHP files with worker mode (2 workers for development)
    php_server {
        worker index.php 2
    }
}
