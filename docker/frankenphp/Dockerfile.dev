FROM dunglas/frankenphp:1.9.1-php8.4

# Install system dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    libzip-dev \
    default-mysql-client \
    unzip \
    curl \
    ca-certificates \
    git \
    && rm -rf /var/lib/apt/lists/*

# Install PHP extensions
RUN install-php-extensions \
    pdo_mysql \
    zip \
    opcache \
    apcu \
    redis \
    xdebug

# Install Composer
COPY --from=composer:latest /usr/bin/composer /usr/bin/composer

# Install docker-compose for benchmark execution
RUN curl -L https://github.com/docker/compose/releases/download/v2.23.0/docker-compose-linux-x86_64 -o /usr/local/bin/docker-compose \
    && chmod +x /usr/local/bin/docker-compose

# Configure PHP for development (keep validation active)
RUN mv "$PHP_INI_DIR/php.ini-development" "$PHP_INI_DIR/php.ini"

# Copy PHP configuration for dev
COPY docker/frankenphp/php-dev.ini $PHP_INI_DIR/conf.d/99-custom.ini

# Copy Caddyfile for dev
COPY docker/frankenphp/Caddyfile.dev /etc/caddy/Caddyfile

WORKDIR /app

# Expose HTTP and HTTPS ports
EXPOSE 80 443 2019

# Start FrankenPHP
CMD ["frankenphp", "run", "--config", "/etc/caddy/Caddyfile"]
